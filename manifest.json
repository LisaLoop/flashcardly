{
    "name": "Flashcardly",
    "options_page": "options.html",
    "chrome_url_overrides" : {
        "newtab": "index.html"
      },
    "version": "1.0",
    "description": "Study Flashcards while browsing the web!",
    "permissions": [
        "storage","declarativeContent","activeTab","tabs","topSites"
    ],
    "manifest_version": 2,
    "browser_action": {
      "default_icon": {
        "16": "images/flashcardly16.png",
        "32": "images/flashcardly32.png",
        "48": "images/flashcardly48.png",
        "128": "images/flashcardly128.png"
      }
    },
    "icons": {
        "16": "images/flashcardly16.png",
        "32": "images/flashcardly32.png",
        "48": "images/flashcardly48.png",
        "128": "images/flashcardly128.png"
      },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}